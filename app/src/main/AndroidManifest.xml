<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foody"
        tools:targetApi="31">
        <activity
            android:name=".ui.feature.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Foody">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.feature.register.customer.RegisterCustomerActivity"
            android:exported="true"
            android:theme="@style/Theme.Foody"
            ></activity>
        <activity
            android:name=".ui.feature.register.resturant.RegisterRestaurantActivity"
            android:exported="true"
            android:theme="@style/Theme.Foody"
            ></activity>
        <activity
            android:name=".ui.feature.resturant.RestaurantListActivity"
            android:exported="true"
            android:theme="@style/Theme.Foody"
            ></activity>
        <activity
            android:name=".ui.feature.food.list.FoodListActivity"
            android:exported="true"
            android:theme="@style/Theme.Foody"
            ></activity>
        <activity
            android:name=".ui.feature.food.single.FoodDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.Foody"
            ></activity>
    </application>

</manifest>